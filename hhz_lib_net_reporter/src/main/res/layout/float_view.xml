<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.hzhu.networkrequestreport.widget.floatwindow.FloatDragLayout
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:id="@+id/rlContent"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:background="@color/translucent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:src="@mipmap/icon_float_close" />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_clear"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:src="@mipmap/icon_float_clear" />

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

        <com.hzhu.networkrequestreport.widget.floatwindow.ScaleImage
            android:id="@+id/ivScale"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:src="@mipmap/icon_float_expand" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white" />
    </com.hzhu.networkrequestreport.widget.floatwindow.FloatDragLayout>
</FrameLayout>